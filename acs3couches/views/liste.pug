doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description' content='')
    meta(name='author' content='')
    title 1, 2, Tree Paris 
    // Favicon
    link(rel='icon' type='image/x-icon' href='assets/favicon.ico')
    // Core theme CSS (includes Bootstrap)
    link(href='css/styles.css' rel='stylesheet')
    // My personnal style
    link(href='css/my-style.css' rel='stylesheet')
  body
    // Responsive navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        a.navbar-brand(href='/')
          img.logo(src='assets/logo_Arbre.png' alt='arbre')
          | Les arbres remarquables de Paris
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.ms-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link(aria-current='page' href='/') Accueil
            li.nav-item
              a.nav-link.active(href='/liste') Liste des arbres
            li.nav-item
              a.nav-link(href='/carte') Carte
    // Page content
    .container
      .text-center.mt-5
        h1 Liste des arbres remarquables
        ul
          each tree in trees
            li=tree.fields.libellefrancais + ' - ' + tree.fields.adresse
    // Bootstrap core JS
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
    // Core theme JS
    script(src='js/scripts.js')